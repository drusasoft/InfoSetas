<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/verde_claro</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorBlanco</item>
    </style>

    <style name="AppTheme.ToolbarTextStyle" parent="TextAppearance.AppCompat.Title">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlanco</item>
    </style>

</resources>
