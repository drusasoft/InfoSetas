<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/verde_claro</item>

        <!--se definen las transiciones entre actividades -->
        <!--<item name="android:windowEnterTransition">@android:transition/slide_right</item>-->
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>

    </style>



    <!-- Estilo de la ToolBar-->
    <style name="AppTheme.ToolbarStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorBlanco</item>
    </style>

    <!-- Estilo del titulo de la ToolBar-->
    <style name="AppTheme.ToolbarTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlanco</item>
    </style>

    <!-- Estilo de la ToolBar PantallaZoom Comestible-->
    <style name="AppTheme.ToolbarStyleComestible" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <!-- Estilo de la ToolBar PantallaZoom Toxica-->
    <style name="AppTheme.ToolbarStyleToxica" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimaryDarkOrange</item>
    </style>

    <!-- Estilo de la ToolBar PantallaZoom Mortal-->
    <style name="AppTheme.ToolbarStyleMortal" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimaryDarkRed</item>
    </style>

    <!-- Estilo de la ToolBar PantallaZoom SinInteres-->
    <style name="AppTheme.ToolbarStyleSinInteres" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimaryDarkGrey</item>
    </style>

    <!--Theme.AppCompat.Light.Dialog.Alert-->
    <!--Estilo del menu desplegable de la Toolbar-->
    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/verde_claro3</item>
        <item name="android:textColor">@color/colorBlanco</item>
    </style>



    <!-- Estilo del PagerTabStrip-->
    <style name="AppTheme.PagerTabStrip" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorBlanco</item>
    </style>

    <!--Estilo del texto de Navigation drawer-->
    <style name="AppTheme.drawerTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Estilo de la barra de busqueda -->
    <style name="AppTheme.searchViewtext" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:textColorHint">@color/colorBlanco</item>
        <item name="android:editTextColor">@color/colorBlanco</item>
    </style>


</resources>
