<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.80"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/layout_lista_zona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_lista_setas"
            android:elevation="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtList_nombre_zona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/texto_pulsacion"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:lines="1"
                android:ellipsize="end"
                android:text="TextView" />

            <LinearLayout
                android:id="@+id/layout_separador_lista_zona"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="@drawable/borde_lista_zonas2"/>

            <TextView
                android:id="@+id/txtList_desc_zona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/texto_pulsacion"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:lines="3"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="TextView" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>